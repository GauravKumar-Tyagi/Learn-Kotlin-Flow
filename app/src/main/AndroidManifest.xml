<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gaurav.learn.kotlin.flow">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnKotlinFlow"
        tools:targetApi="31">

        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.retrofit.single.SingleNetworkCallActivity"
            android:label="@string/single_network_call" />

        <activity
            android:name=".ui.room.RoomDBActivity"
            android:label="@string/room_database" />

        <activity
            android:name=".ui.flowon.FlowOnActivity"
            android:label="@string/flow_on" />

        <activity
            android:name=".ui.coldFlow.ColdFlowActivity"
            android:label="@string/understand_clod_flow" />

        <activity android:name=".ui.hotFlow.stateFlow.StateFlowActivity"
            android:label="@string/understand_hot_flow_stateflow" />

        <activity android:name=".ui.hotFlow.sharedFlow.SharedFlowActivity"
            android:label="@string/understand_hot_flow_shared_flow" />

        <activity
            android:name=".ui.operators.OperatorsActivity"
            android:label="@string/operators" />


    </application>

</manifest>